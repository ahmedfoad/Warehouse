@{
    ViewBag.Title = "إضافة مصروفات جديدة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <i class="icon-settings"></i>
                <a href="#">
                    الاعدادات
                </a>
                <i class="fa fa-angle-left"></i>
            </li>
            <li>
                <a href="#">
                    إضافة مصروفات جديدة
                </a>
            </li>

        </ul>
        
    </div>
</div>
<div class="row" ng-controller="MasrofatCtrl">
    <div class="col-md-12" ng-show="AlertParameter">
        <div class="m-heading-1 border-green m-bordered">
            <span style="color:red"> {{ErrorName}} </span>
            <button type="button" style="margin-top: 6px;" class="close" ng-click="ReomveAlert()"></button>
        </div>
    </div>
    <div class="col-md-12" ng-show="Payment">
        <div id="Paymenttxt" class="m-heading-1 border-green m-bordered">
            {{Paymenttxt}}
        </div>
    </div>
    <div class="col-md-12">
        <div class="portlet light">
            <div class="portlet-title">

                <div class="actions">
                    <a href="javascript:;" class="btn blue" ng-click="BtnPrintInvoice()" ng-disabled="btn_Printdisable" id="PrintInvoice">
                        <i class="fa fa-print"></i>  طباعة بيان المصروفات (F2)
                    </a>
                    <a href="javascript:;" class="btn green" ng-click="BtnNew()">
                        <i class="fa fa-plus"></i> جديد (F4)
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                
                    <div class='row form-body'>
                        <div class='col-md-3 form-group'>
                            <label>مسلسل</label>
                            <div class='form-group'>
                                <input type='number' class='form-control' readonly placeholder='مسلسل' ng-model="Masrofat.Invoice_Number">
                            </div>
                        </div>
                        
                        <div class='col-md-3 form-group'>
                            <label id="lblBarcode">المبلغ</label>
                            <div class='form-group fixeddiv'>
                                <input name="Money" id="Money" ng-model="Masrofat.Money" type='text' value="{{Masrofat.Money}}" placeholder="المبلغ" class='form-control'>
                                <label class="label2">ريال</label>
                            </div>
                        </div>

                        <div class='col-md-3 form-group'>
                            <label id="lblBarcode">نوع المصروفات</label>
                            <div class='form-group fixeddiv'>
                                <input id="Masrofat_Type_Id" ng-model="Masrofat.Masrofat_Type_Id" type='hidden' value="{{Masrofat.Masrofat_Type_Id}}">
                                <input name="Masrofat_Type_Name" id="Masrofat_Type_Name" ng-model="Masrofat.Masrofat_Type_Name" type='text' value="{{Masrofat.Masrofat_Type_Name}}" ng-click="loadMasrofat_Type()" placeholder="نوع المصروفات" class='form-control' readonly>
                            </div>
                        </div>
                       
                        <div class='col-md-3 form-group'>
                            <label>تاريخ الصرف</label>
                            <div class='form-group'>
                                <input type='text' ng-model="Masrofat.Date_Invoice" value="{{Masrofat.Date_Invoice}}"  id="Date_Invoice" datepicker data-zdp_readonly_element="true" class="form-control">
                            </div>
                        </div>

                        <div class='col-md-12 form-group'>
                            <label for="Barcode">البيان</label>
                            <div class='form-group fixeddiv'>
                                <input name="Bian" focus-next="Notes" id="Bian" ng-model="Masrofat.Bian" type='text' class='form-control' placeholder="البيان">
                            </div>
                        </div>
                       
                       
                        <div class='col-md-12 form-group'>
                            <label for="Price_Mowrid">ملاحظات</label>
                            <div class='form-group'>
                                <textarea rows="5" name="Notes"  focus-next="Money" id="Notes" ng-model="Masrofat.Notes" class='form-control' placeholder="ملاحظات" ></textarea>
                            </div>
                        </div>
                    </div>
                    <div class='row form-actions' style='text-align:center'>
                        <button type='submit' class='btn green' ng-hide="SaveBtn" ng-click="SaveMasrofat()">حفظ</button>
                        <button type='submit' class='btn green' ng-hide="EditBtn" ng-click="SaveMasrofat()">تعديل</button>
                        <button type='submit' class='btn red' ng-hide="DeleteBtn" ng-click="DeleteMasrofat()">حذف</button>
                        <a href="/Home" type='submit' class='btn purple'>إلغاء</a>
                    </div>
                
            </div>
        </div>
    </div>
    <div class="col-md-12" ng-show="dataEntire">
        <div class="note note-info dataEntire">
            <h4 class="profile-desc-title">بيانات الإدخال</h4>
            <div class="col-md-5 profile-desc-link">
                <i class="fa fa-user"></i>
                <span style="color: #5b9bd1">المستخدم</span>
                <br />
                <span style="margin-right: 30px;">{{Masrofat.User_Name}}</span>
            </div>
            <div class="col-md-2 profile-desc-link">
                <i class="fa fa-desktop"></i>
                <span style="color: #5b9bd1">الكمبيوتر</span>
                <br />
                <span style="margin-right: 30px;">{{Masrofat.ComputerName}}</span>
            </div>
            <div class="col-md-2 profile-desc-link">
                <i class="fa fa-sitemap"></i>
                <span style="color: #5b9bd1">مستخدم الشبكة</span>
                <br />
                <span style="margin-right: 30px;">{{Masrofat.ComputerUser}}</span>
            </div>
            <div class="col-md-3 profile-desc-link">
                <i class="fa fa-calendar"></i>
                <span style="color: #5b9bd1">التاريخ</span>
                <br />
                <span style="margin-right: 30px;"> {{Masrofat.InDate}}</span>
            </div>
        </div>
    </div>
 
</div>
