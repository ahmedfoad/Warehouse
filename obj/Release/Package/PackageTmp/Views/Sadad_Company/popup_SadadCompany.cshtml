<div class="row" style="height:200px;">
    <div class="col-md-12">
        <!-- BEGIN Portlet PORTLET-->
        <div class="portlet light">

            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-paper-plane font-yellow-casablanca" style="color: #5c9acf !important;"></i>
                    <a href="#" id="pageTitle">
                        سداد فواتير المبيعات
                    </a>
                </div>
                <div class="actions">
                    <a class="btn red btn-sm fancymodal-close" id='closeDealingType' ng-click="closeUiModal()" style="padding-left:15px;" href="#"> إغلاق </a>
                </div>
            </div>
            <div class='portlet-body'>
                <div class="col-md-12" ng-show="AlertParameter">
                    <div class="m-heading-1 border-green m-bordered">
                        <span style="color:red"> {{ErrorName}} </span>
                        <button type="button" style="margin-top: 6px;" class="close" ng-click="ReomveAlert()"></button>
                    </div>
                </div>
                <div ng-hide="IsNewSarf">
                    <div class='row' style="margin: auto;">
                        <label>طريقة الدفع</label>
                        <div class='form-group'>
                            <select id="Sadad_Type_Id" ng-model="New_Sadad.Sadad_Type_Id" class="form-control" ng-change="loadproduct()">
                                <option value="" ng-selected="New_Sadad.Sadad_Type_Id == ''"> اختار طريقة الدفع</option>
                                <option value="1" ng-selected="New_Sadad.Sadad_Type_Id == '1'">كاش</option>
                                <option value="2" ng-selected="New_Sadad.Sadad_Type_Id == '2'">مدي </option>
                                @*<option value="3" ng-selected="New_Sadad.Sadad_Type_Id == '3'">ارجاع بضاعة</option>*@
                            </select>
                        </div>
                    </div>

                    <div class='row' style="margin: auto;">
                        <label>إجمالي السداد</label>
                        <input id="Money" ng-model="New_Sadad.Money" class='form-control' ng-change="MoneyCalculate()" placeholder='إجمالي السداد' type='text' select-on-click autofocus />
                    </div>
                    <div class='row' style="margin: auto;">
                        <label>الباقى</label>
                        <input id="Name" ng-model="New_Sadad.Remain" class='form-control' placeholder='الباقى' type='text' readonly />
                    </div>
                </div>

                <div ng-hide="IsSucess" style='text-align:center;'>
                    <div style="color:#e7505a;font-size:55px;font-weight:bold;">تم صرف العمولة بنجاح ....</div>
                    <img src="~/assets/Images/sucess.png" />
                </div>
                <br />
            </div>
            <div class='row form-actions' style='text-align:center;border-top: 1px solid #eee;padding-top: 15px;'>
                <button type='submit' class='btn green' ng-hide="IsNewSarf" ng-click="BtnConfirm()"><i class="fa fa-check-square-o" aria-hidden="true"></i>  سداد الفواتير </button>
                <button type='submit' class='btn green' ng-hide="IsSucess" ng-click="PrintMasrofat()"><i class="fa fa-print"></i>  طباعة بيان مصروفات </button>
            </div>
        </div>
        <!-- END Portlet PORTLET-->


    </div>


</div>




