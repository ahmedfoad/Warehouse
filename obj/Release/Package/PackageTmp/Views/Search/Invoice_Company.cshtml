@{
    ViewBag.Title = "البحث عن عملية شراء";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <i class="icon-magnifier"></i>
                <a href="#">
                    البحث و الاستعلام
                </a>
                <i class="fa fa-angle-left"></i>
            </li>
            <li>
                <a href="#">
                    البحث عن عملية شراء
                </a>
            </li>

        </ul>
    </div>
</div>
<div class="row" ng-controller="Invoice_CompanySearchCtrl">
    <div class="col-md-12">
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    خيارات البحث
                </div>
                <div class="actions">
                    <a href="" class="btn btn-default" ng-click="emptyInputs()">
                        <i class="fa fa-pencil"></i> إخلاء خانات البحث
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <form role='form'>
                    <div class='row form-body'>
                        <div class="col-md-3 form-group">
                            <label class="control-label">رقم الفاتورة من </label>
                            <input ng-model="Srch_Company.Invoice_From" numbersOnly type="number" name="DatBegin" id="DatBegin" value="" class="form-control" placeholder="الفترة من" />
                        </div>
                        <div class="col-md-3 form-group">
                            <label class="control-label">إلي</label>
                            <input ng-model="Srch_Company.Invoice_To" numbersOnly type="number" name="DatEnd" id="DatEnd" value="" class="form-control" placeholder="إلي" />
                        </div>
                        <div class='col-md-6 form-group'>
                            <label>اسم الشركة</label>
                            <div class='form-group'>
                                <input type='hidden' id="Company_Id" ng-model="Srch_Company.Company_Id">
                                <input type='text' id="Company_Name" ng-model="Srch_Company.Company_Name" ng-click="loadCompanies()" placeholder='اسم الشركة' class='form-control' readonly>
                            </div>
                        </div>
                        <div class="col-md-3 form-group">
                            <label class="control-label">التاريخ من </label>
                            <input id="DateFrom" ng-model="Srch_Company.DateFrom" type="text" datepicker  class="form-control" data-zdp_readonly_element="true">
                        </div>
                        <div class="col-md-3 form-group">
                            <label class="control-label">إلي</label>
                            <input id="DateTo" ng-model="Srch_Company.DateTo" type="text" datepicker class="datepickeend form-control" data-zdp_readonly_element="true">
                        </div>
                        <div class="col-md-3 form-group">
                            <label class="control-label">سعر الشراء من</label>
                            <input ng-model="Srch_Company.Price_From" numbersOnly type="number" name="DatBegin" id="DatBegin" value="" class="form-control" placeholder="الفترة من" />
                        </div>
                        <div class="col-md-3 form-group">
                            <label class="control-label">إلي</label>
                            <input ng-model="Srch_Company.Price_To" numbersOnly type="number" name="DatEnd" id="DatEnd" value="" class="form-control" placeholder="إلي" />
                        </div>

                    </div>
                    <div class="row form-actions" style="text-align:center">
                        <button type="submit" class="btn green" ng-click="SearchButton()">بحث</button>
                    </div>
                </form>
            </div>
            <div class="portlet-title">
                <div class="caption">
                    نتائج البحث
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="width: 5%;"> رقم الفاتورة </th>
                                <th style="width: 30%;"> اسم الشركة </th>
                                <th style="width: 10%">التاريخ</th>
                                <th style="width: 10%;">سعر الشراء</th>
                                <th style="width: 10%;">إجمالى السداد</th>
                            </tr>

                        </thead>
                        <tbody>
                            <tr ng-repeat="item in data_ListItems track by $index" ng-dblclick="CallEditPage(item)">
                                <td> {{item.Invoice_Number}} </td>
                                <td> {{item.Company_Name}} </td>
                                <td>{{item._Date_Invoice | date:'dd/MM/yyyy'}} </td>
                                <td> {{item.Price}} </td>
                                <td> {{item.Total_Sadad}} </td>
                            </tr>
                        </tbody>
                    </table>
                    <div style="text-align: center;" ng-show="TableLoading">
                        <img src="~/assets/layouts/img/Preloader_2.gif" />
                        <img src="~/assets/layouts/img/Preloader_2.gif" />
                    </div>
                    <div ng-show="EndSearch" style="text-align: center; color:red;"> عفوا لا توجد بيانات آخري </div>
                </div>
            </div>
        </div>
    </div>
</div>
