@{
    ViewBag.Title = "الإستعلام عن شركة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <i class="icon-magnifier"></i>
                <a href="#">
                    البحث و الاستعلام
                </a>
                <i class="fa fa-angle-left"></i>
            </li>
            <li>
                <a href="#">
                    الإستعلام عن شركة
                </a>
            </li>

        </ul>

    </div>
</div>
<div class="row" ng-controller="MowridSearchCtrl">
    <div class="col-md-12">
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    خيارات البحث
                </div>
                <div class="actions">
                    <a href="" class="btn btn-default" ng-click="emptyInputs()">
                        <i class="fa fa-pencil"></i> إخلاء خانات البحث
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <form role='form'>
                    <div class='row form-body'>
                        <div class="col-md-2 form-group">
                            <label class="control-label">رقم الفاتورة من </label>
                            <input ng-model="Srch_Product.Invoice_From" numbersOnly type="number" name="DatBegin" id="DatBegin" value="" class="form-control" placeholder="الفترة من" />
                        </div>
                        <div class="col-md-2 form-group">
                            <label class="control-label">إلي</label>
                            <input ng-model="Srch_Product.Invoice_To" numbersOnly type="number" name="DatEnd" id="DatEnd" value="" class="form-control" placeholder="إلي" />
                        </div>

                        <div class="col-md-2 form-group">
                            <label class="control-label">التاريخ من </label>
                            <input name="DateFrom" ng-model="Srch_Product.DateFrom" type="text" datepicker class="form-control" data-zdp_readonly_element="true">
                        </div>
                        <div class="col-md-2 form-group">
                            <label class="control-label">إلي</label>
                            <input name="DateTo" ng-model="Srch_Product.DateTo" type="text" datepicker class="datepickeend form-control" data-zdp_readonly_element="true">
                        </div>
                        <div class="col-md-2 form-group">
                            <label class="control-label">السعر من </label>
                            <input ng-model="Srch_Product.Price_From" numbersOnly type="number" name="DatBegin" id="DatBegin" value="" class="form-control" placeholder="الفترة من" />
                        </div>
                        <div class="col-md-2 form-group">
                            <label class="control-label">إلي</label>
                            <input ng-model="Srch_Product.Price_To" numbersOnly type="number" name="DatEnd" id="DatEnd" value="" class="form-control" placeholder="إلي" />
                        </div>

                    </div>
                    <div class="row form-actions" style="text-align:center">
                        <button type="submit" class="btn green" ng-click="SearchButton()">بحث</button>
                    </div>
                </form>
            </div>
            <div class="portlet-title">
                <div class="caption">
                    نتائج البحث
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="width: 30%;"> الاسم </th>
                                <th style="width: 30%">رقم الجوال</th>
                                <th style="width: 30%;">العنوان</th>


                            </tr>

                        </thead>
                        <tbody>
                            <tr ng-repeat="item in data track by $index" ng-dblclick="CallEditPage(item)">
                                <td> {{item.Name}} </td>
                                <td> {{item.JawalNO}} </td>
                                <td> {{item.Address}} </td>

                            </tr>
                        </tbody>
                    </table>
                    <div style="text-align: center;" ng-show="TableLoading">
                        <img src="~/assets/layouts/img/Preloader_2.gif" />
                        <img src="~/assets/layouts/img/Preloader_2.gif" />
                    </div>
                    <div ng-show="EndSearch" style="text-align: center; color:red;"> عفوا لا توجد بيانات آخري </div>
                </div>
            </div>
        </div>
    </div>
</div>
