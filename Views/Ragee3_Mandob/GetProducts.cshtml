<div class="row">
    <div class="col-md-12">
        <!-- BEGIN Portlet PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-paper-plane font-yellow-casablanca" style="color: #5c9acf !important;"></i>
                    من فضلك اختار الصنف
                </div>
                <div class="actions">
                    <a class="btn red btn-sm fancymodal-close" id='closebox' ng-click="closeUiModal()" style="padding-left:15px;" href="#"> إغلاق </a>
                </div>
            </div>
            <div class='portlet-body'>
               
                <div class='row' style="margin: auto;">
                    <div class='col-md-6 form-group'>
                        <label id="lblBarcode">اسم الصنف</label>
                        <div class='form-group fixeddiv'>
                            <input  id="Search" ng-keyup="keyupevt()" class='form-control' placeholder='البحث باسم الصنف' type='text' />

                        </div>
                    </div>
                </div>
                
                <div class='row' style="text-align:center;">
                    <div class='table-responsive' style="max-height: 300px;margin-top:10px;" id="ViewList">
                        <table class='table table-striped' style='margin:auto'>
                            <thead>
                                <tr>
                                    <th> اسم الصنف </th>
                                    <th> اسم الشركة </th>
                                    <th> سعر البيع </th>

                                    <th>كمية التارجت</th>
                                    <th>صنف العرض</th>
                                    <th>الكمية المجانية</th>
                                  
                                    
                                </tr>
                            </thead>
                            <tbody id="GetDealingTypeTable">
                                <tr ng-repeat="item in ProductList track by $index" ng-click="clicktr(item)">  
                                    <td>{{item.Name}}</td>
                                    <td>{{item.Company_Name}}</td>
                                    <td style="background-color: #f76262;">{{item.Price_Unit}}</td>

                                    <td>{{item.Offer_TargetAmount}}</td>
                                    <td>{{item.Offer_Product_Name}}</td>
                                    <td>{{item.Offer_BonusAmount}}</td>
                                </tr>
                            </tbody>
                        </table>

                    </div>

                </div>
            </div>
        </div>
        <!-- END Portlet PORTLET-->
    </div>
</div>




<style>
    .modal.in .modal-dialog {
        height: 150px;
        width: 1200px;
    }
</style>