@{
    ViewBag.Title = "البحث عن صنف";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <i class="icon-magnifier"></i>
                <a href="#">
                    البحث و الاستعلام
                </a>
                <i class="fa fa-angle-left"></i>
            </li>
            <li>
                <a href="#">
                    الإستعلام عن صنف
                </a>
            </li>

        </ul>
        
    </div>
</div>
<div class="row" ng-controller="ProductSearchCtrl">
    <div class="col-md-12">
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    خيارات البحث
                </div>
                <div class="actions">
                    <a href="" class="btn btn-default" ng-click="emptyInputs()">
                        <i class="fa fa-pencil"></i> إخلاء خانات البحث
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <form role='form'>
                    <div class='row form-body'>
                        <div class='col-md-6 form-group'>
                            <label>اسم الصنف</label>
                            <div class='form-group'>
                                <input ng-model="Srch_Product.Product_Name" type='text' id="NO" class='form-control' placeholder='' >
                            </div>
                        </div>
                        <div class='col-md-6 form-group'>
                            <label>اسم الشركة</label>
                            <div class='form-group'>
                                <input type='hidden' id="Company_Id" ng-model="Srch_Product.Company_Id">
                                <input type='text' id="Company_Name" ng-model="Srch_Product.Company_Name" ng-click="loadCompanies()" placeholder='اسم الشركة' class='form-control' readonly>
                            </div>
                        </div>
                        <div class="col-md-3 form-group">
                            <label class="control-label">السعر البيع من </label>
                            <input ng-model="Srch_Product.Price_From" numbersOnly type="number" name="DatBegin" id="DatBegin" value=""  class="form-control" placeholder="" />
                        </div>
                        <div class="col-md-3 form-group">
                            <label class="control-label">إلي</label>
                            <input ng-model="Srch_Product.Price_To"  numbersOnly type="number" name="DatEnd" id="DatEnd" value="" class="form-control" placeholder="إلي" />
                        </div>

                        <div class="col-md-3 form-group">
                            <label class="control-label">السعر الشراء من </label>
                            <input ng-model="Srch_Product.Price_Mowrid_From" numbersOnly type="number" name="DatBegin" id="DatBegin" value="" class="form-control" placeholder="" />
                        </div>
                        <div class="col-md-3 form-group">
                            <label class="control-label">إلي</label>
                            <input ng-model="Srch_Product.Price_Mowrid_To" numbersOnly type="number" name="DatEnd" id="DatEnd" value="" class="form-control" placeholder="إلي" />
                        </div>
                        
                      
                     
                     
                        
                    </div>
                    <div class="row form-actions" style="text-align:center">
                        <button type="submit" class="btn green" ng-click="SearchButton()">بحث</button>
                    </div>
                </form>
            </div>
            <div class="portlet-title">
                <div class="caption">
                    نتائج البحث
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th> اسم الصنف </th>
                                <th>اسم الشركة</th>
                                <th title="سعر الشراء"> سعر الشراء </th>
                                <th>قيمة الضريبة</th>
                                <th title="إجمالي سعر الشراء"> إجمالي سعر الشراء </th>
                                <th title="سعر البيع"> سعر البيع </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in ProductList track by $index" ng-dblclick="CallEditPage(item)">
                                <td> {{item.Name}} </td>
                                <td>{{item.Company_Name}} </td>
                               
                                <td>{{item.Price_Mowrid}} </td>
                                <td>{{item.Taxes_Price}} </td>
                                <td>{{item.TotalPrice}} </td>
                                <td>{{item.Price_Unit}} </td>
                          
                               
                             
                              
                            </tr>
                        </tbody>
                    </table>
                    <div style="text-align: center;" ng-show="TableLoading">
                        <img src="~/assets/layouts/img/Preloader_2.gif" />
                        <img src="~/assets/layouts/img/Preloader_2.gif" />
                    </div>
                    <div ng-show="EndSearch" style="text-align: center; color:red;"> عفوا لا توجد بيانات آخري </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Related{
    <div class="row">
        <div class="col-md-12">
            <h4 class="page-title">الأدوات</h4>
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption" style="font-size:14px;">
                        روابط ذات صلة
                    </div>
                </div>
                <div>
                    <div class="portlet-body">
                        <a href="/Search/Product"><i class="fa fa-angle-left"></i>الإستعلام عن صنف</a>
                    </div>
                    <div class="portlet-body">
                        <a href="/Search/Invoice_Mandob"><i class="fa fa-angle-left"></i>الإستعلام عن حركة بيع</a>
                    </div>
                    <div class="portlet-body">
                        <a href="/Search/Invoice_Company"><i class="fa fa-angle-left"></i>الإستعلام عن عملية شراء</a>
                    </div>
                    <div class="portlet-body">
                        <a href="/Search/Company"><i class="fa fa-angle-left"></i>الإستعلام عن شركة</a>
                    </div>
                    <div class="portlet-body">
                        <a href="/Search/Masrofat"><i class="fa fa-angle-left"></i>الإستعلام عن المصروفات</a>
                    </div>
                    <div class="portlet-body">
                        <a href="/Search/Eradat"><i class="fa fa-angle-left"></i>الإستعلام عن الايرادات</a>
                    </div>
                    <div class="portlet-body">
                        <a href="/Search/Employee"><i class="fa fa-angle-left"></i>الإستعلام عن الموظفين</a>
                    </div>
                    <div class="portlet-body">
                        <a href="/Search/Salary"><i class="fa fa-angle-left"></i>الإستعلام عن الرواتب</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
}
@section AngularFiles{
    <script src="~/App/Search/ProductSearchCtrl.js"></script>
}
