@{
    ViewBag.Title = "تقرير المصروفات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->

        <ul class="page-breadcrumb breadcrumb">
            <li>
                <i class="icon-settings"></i>
                <a href="#">
                    التقارير
                </a>
                <i class="fa fa-angle-left"></i>
            </li>
            <li>
                <a href="#">
                    تقرير المصروفات
                </a>
            </li>

        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>
<div class="row" ng-controller="MasrofatListCtrl">
    <div class="col-md-12">
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    خيارات البحث
                </div>
                <div class="actions">
                    <a href="" class="btn btn-default" ng-click="emptyInputs()">
                        <i class="fa fa-pencil"></i> إخلاء خانات البحث
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <form role='form'>
                    <div class='row form-body'>
                        <div class="col-md-2 form-group">
                            <label class="control-label">التاريخ من </label>
                            <input id="Date_Invoice_From"   ng-model="Srch_Masrofat.Date_Invoice_From" type="text" datepicker class="form-control" data-zdp_readonly_element="true">
                        </div>
                        <div class="col-md-2 form-group">
                            <label class="control-label">إلي</label>
                            <input id="Date_Invoice_TO" ng-model="Srch_Masrofat.Date_Invoice_TO" type="text" datepicker class="form-control" data-zdp_readonly_element="true">
                        </div>
                    </div>
                    <div class="row form-actions" style="text-align:center">
                        <button type="submit" class="btn green" ng-click="SearchButton()">بحث</button>
                        <button type="submit" class="btn purple" ng-click="BtnPrint()">طباعة</button>
                    </div>
                </form>
            </div>
            <div class="portlet-title">
                <div class="caption">
                    نتائج البحث
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="width: 5%;"> رقم الفاتورة </th>
                                <th style="width: 10%">التاريخ</th>
                                <th style="width: 10%;">الوقت</th>
                                <th style="width: 15%;">المبلغ</th>
                                <th style="width: 20%;">نوع المصروفات</th>
                                <th style="width: 40%;">البيان</th>
                            </tr>

                        </thead>
                        <tbody>
                            <tr ng-repeat="item in data track by $index" ng-dblclick="CallEditPage(item)">
                                <td> {{item.Invoice_Number}} </td>
                                <td>{{item._Date_Invoice | date:'dd/MM/yyyy'}} </td>
                                <td>{{item._Date_Invoice | date:'hh:mm a'}} </td>
                                <td> {{item.Money}} </td>
                                <td> {{item.Masrofat_Type_Name}} </td>
                                <td> {{item.Bian}} </td>
                            
                            </tr>
                        </tbody>
                    </table>
                    <div style="text-align: center;" ng-show="TableLoading">
                        <img src="~/assets/layouts/img/Preloader_2.gif" />
                        <img src="~/assets/layouts/img/Preloader_2.gif" />
                    </div>
                    <div ng-show="EndSearch" style="text-align: center; color:red;"> عفوا لا توجد بيانات آخري </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Related{
    <div class="row">
        <div class="col-md-12">
            <h4 class="page-title">الأدوات</h4>
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption" style="font-size:14px;">
                        روابط ذات صلة
                    </div>
                </div>
                <div>
                    <div class="portlet-body">
                        <a href="/Search/Invoice_Mowarid"><i class="fa fa-angle-left"></i> الإستعلام عن عملية شراء</a>
                    </div>
                    <div class="portlet-body">
                        <a href="/Search/Mandob"><i class="fa fa-angle-left"></i> الإستعلام عن مشترى</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
}
