<div class="row">
    <div class="col-md-12" ng-show="AlertParameter">
        <div class="m-heading-1 border-green m-bordered">
            <span style="color:red"> {{ErrorName}} </span>
            <button type="button" style="margin-top: 6px;" class="close" ng-click="ReomveAlert()"></button>
        </div>
    </div>
    <div class="col-md-12">
        <!-- BEGIN Portlet PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-paper-plane font-yellow-casablanca" style="color: #5c9acf !important;"></i>
                    من فضلك اختار الصنف
                </div>
                <div class="actions">
                    <a class="btn red btn-sm fancymodal-close" id='closebox' ng-click="closeUiModal()" style="padding-left:15px;" href="#"> إغلاق </a>
                </div>
            </div>
            <div class='portlet-body'>
                <div class='row' style="text-align:center;">
                    <div class='table-responsive' style="max-height: 300px;margin-top:10px;" id="ViewList">
                        <table class='table table-striped' style='margin:auto'>
                            <thead>
                                <tr>
                                    <th> اسم الصنف </th>
                                    <th> الكمية </th>
                                    <th> سعر الحبة </th>
                                    <th> كمية الارجاع </th>

                                    <th> الباقي </th>
                                    <th> مبلغ الارجاع </th>

                                </tr>
                            </thead>
                            <tbody id="GetDealingTypeTable">
                                <tr ng-repeat="item in ProductList track by $index">
                                    <td>{{item.Product_Name}}</td>
                                    <td>{{item.Amount}}</td>
                                    <td>{{item.Price}}</td>
                                    <td><input id="Amount" ng-model="item.Return_Amount" class='form-control' placeholder='كمية الارجاع' type='text' ng-change="Calculate_Return_Amount(item)" /></td>
                                    <td><input id="Remain_Amount" ng-model="item.Remain_Amount" class='form-control' placeholder='كمية الارجاع' type='text' readonly /></td>
                                    <td><input id="Return_Amount" ng-model="item.Return_Price" class='form-control' placeholder='كمية الارجاع' type='text' readonly /></td>
                                </tr>
                            </tbody>
                        </table>

                    </div>

                </div>
                <div class='row form-actions' style='text-align:center'>
                    <button type='submit' class='btn green' ng-click="Save_ReturnPorducts()">ارجاع الاصناف</button>
                </div>
            </div>
        </div>
        <!-- END Portlet PORTLET-->
    </div>
</div>




<style>
    .modal.in .modal-dialog {
        height: 150px;
        width: 1200px;
    }
</style>